<% @products.each do |product| %>
<%=link_to product.name, product_path(product.id) %><br/>
<%= button_to "Add to cart", add_product_to_cart_path(product) %>
<%=product.kind %>  <br/>
	<%=product.description %> <br/>
	<%=product.artist %> <br/>
	<%= number_to_currency product.price, locale: :us %> <br/>
	<%=product.quantity %> <br/>
	<%=product.tagline %> <br/>
<img src="<%=product.image.first %>">	<br/>
	<br/>
<% end %>